<?xml version='1.0' encoding='utf-8'?>
<widget id="com.createtrips.hashtags" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hashtags</name>
    <description>
        Hashtags is an app that allows you to easily track and Tweet on hashtags and Twitter lists.
    </description>
    <author>
        https://github.com/jehna/
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/36.png" />
        <icon density="mdpi" src="res/android/48.png" />
        <icon density="hdpi" src="res/android/72.png" />
        <icon density="xhdpi" src="res/android/96.png" />
        <icon density="xxhdpi" src="res/android/114.png" />
        <icon density="xxxhdpi" src="res/android/192.png" />
        <preference name="SplashScreen" value="none" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/180.png" width="180" />
        <icon height="60" src="res/ios/60.png" width="60" />
        <icon height="120" src="res/ios/120.png" width="120" />
        <splash height="960" src="res/ios/splash-640x960.png" width="640" />
        <splash height="1136" src="res/ios/splash-640x1136.png" width="640" />
        <splash height="1334" src="res/ios/splash-750x1334.png" width="750" />
        <splash height="2208" src="res/ios/splash-1242x2208.png" width="1242" />
    </platform>
    <engine name="ios" spec="^3.8.0" />
    <engine name="android" spec="^4.0.2" />
    <plugin name="cordova-plugin-device" spec="^1.0.1" />
    <plugin name="cordova-plugin-dialogs" spec="^1.1.1" />
    <plugin name="cordova-plugin-network-information" spec="^1.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^2.1.0" />
    <preference name="TwitterConsumerKey" value="KyBdbOxwIFJaU0n4r7oeFVUpO" />
    <preference name="TwitterConsumerSecret" value="8FJQLKichQOjeTiAV1n0ODoiSBnh1GxQ2oVaZqYjLVFiM3wTW1" />
    <preference name="Orientation" value="portrait" />
    <preference name="xwalkVersion" value="14+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
</widget>
